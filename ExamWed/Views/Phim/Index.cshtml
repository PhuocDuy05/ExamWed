@model List<Phim>
<partial name="_Notification" />

<div class="row mb-4">
    <div class="col-md-6">
        <h2>LIST PHIM</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i> Add New
        </a>
    </div>
</div>
<div class="students">
    <table class="table table-bordered table-striped table-hover custom-table align-middle text-center">
        <thead class="table-warning" style="color:#ff0000">
            <tr>
                <th>Tựa đề</th>
                <th>Thể loại</th>
                <th>Giá vé</th>
                <th>Thời lượng</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody style="background-color:#cfebe6">
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.TuaDe</td>
                    <td>@(x.TrongNuoc ? "Việt Nam" : "Nước ngoài")</td>
                    <td>@x.GiaVe.ToString("N0") đ</td>
                    <td>@x.ThoiLuong</td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="Update" asp-route-id="@x.Id" class="btn btn-outline-success btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>Thống kê: <strong>Tổng số phim:</strong> @ViewBag.TongSoPhim - 
    <strong>Giá vé cao nhất:</strong> @ViewBag.GiaVeCaoNhat.ToString("N0") đ</p>

</div>
