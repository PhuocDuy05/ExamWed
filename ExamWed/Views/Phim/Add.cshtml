@model Phim
<form asp-action="Add" method="post" enctype="multipart/form-data">
    <h2>Add Phim</h2>
    <hr />

    <div class="row">
        <div class="col-md-12">
            <div class="form-group pb-2">
                <label asp-for="TuaDe"></label>
                <input asp-for="TuaDe" class="form-control" />
                <span asp-validation-for="TuaDe" class="text-danger"></span>
            </div>

            <div class="form-group pb-2">
                <label>Diễn viên</label>
                <textarea asp-for="DienVien" class="form-control"></textarea>
                <span asp-validation-for="DienVien" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label>Thể loại</label>
                <select asp-for="TrongNuoc" class="form-control">
                    <option value="true">Việt Nam</option>
                    <option value="false">Nước ngoài</option>
                </select>

            </div>
            <div class="form-group pb-2">
                <label>Giá vé</label>
                <input asp-for="GiaVe" class="form-control" />
                <span asp-validation-for="GiaVe" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label>Thời lượng</label>
                <input asp-for="ThoiLuong" class="form-control" />              
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary"> Save </button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
